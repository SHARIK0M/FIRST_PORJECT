  </div>
</section>

<!-- ============================= -->
<!-- Product Section -->
<!-- ============================= -->
<section class="product_spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ul class="filter__controls">
          <li class="active" data-filter="*">New Arrivals</li>
        </ul>
      </div>
    </div>
    <div class="row product__filter">
      {{#each Products}}
      <div class="col-lg-3 col-md-6 col-sm-6 mix {{this.category.category}}">
        <div class="product__item {{#if discountPrice}}sale{{/if}}">
          
          <!-- Product Image -->
          <div class="product__item__pic">
            <a href="/productDetails/{{this._id}}">
              <img src="assets/imgs/products/{{this.imageUrl.[0]}}" alt="Product Image" class="default-img img-fluid"/>
              <img src="assets/imgs/products/{{this.imageUrl.[1]}}" alt="Hover Image" class="hover-img img-fluid"/>
            </a>
            <span class="label badge badge-primary">{{#if discountPrice}}Sale{{else}}New{{/if}}</span>
          </div>
          
          <!-- Product Details -->
          <div class="product__item__text text-center">
          
            
            <!-- Product Rating -->
            <div class="rating mb-2">
              {{#times this.rating}}<i class="fa fa-star text-warning"></i>{{/times}}
              {{#times (subtract 5 this.rating)}}<i class="fa fa-star-o"></i>{{/times}}
            </div>
            
            <!-- Product Price -->
            <div class="product-price mb-2">
              {{#if discountPrice}}
                <span class="text-danger font-weight-bold">₹{{discountPrice}}</span>
                <span class="old-price text-muted text-decoration-line-through">₹{{price}}</span>
              {{else}}
                <span class="font-weight-bold">₹{{price}}</span>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

