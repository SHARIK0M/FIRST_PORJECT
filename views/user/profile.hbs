<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span></span> Account
                <span></span> Dashboard
            </div>
        </div>
    </div>
    <section class="pt-50 pb-150">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="row">
                        {{> profileHeader}}
                        <div class="col-md-9">
                            <div class="tab-content dashboard-content">
                                <div class="tab-pane fade active show" id="dashboard" role="tabpanel">
                                    <div class="card shadow-sm border-0 rounded-lg">
                                        <div class="card-header bg-primary text-white text-center">
                                            <h4 class="mb-0">Welcome, {{userData.name}}!</h4>
                                        </div>
                                        <div class="card-body text-center">
                                            <div class="profile-image-wrapper mb-3">
                                                <img src="{{#if userData.image}}/assets/imgs/profiles/{{userData.image}}{{else}}/images/users/default.png{{/if}}" 
                                                     class="rounded-circle border shadow-sm" 
                                                     alt="Profile Image"
                                                     style="width: 120px; height: 120px; object-fit: cover;">
                                            </div>
                                            <h5 class="card-title font-weight-bold">{{userData.name}}</h5>
                                            <hr>
                                            <div class="user-info text-left px-3">
                                                <p class="mb-2"><i class="fas fa-envelope text-primary"></i> <strong>Email:</strong> {{userData.email}}</p>
                                                <p class="mb-2"><i class="fas fa-phone text-primary"></i> <strong>Phone:</strong> {{userData.mobile}}</p>
                                                <p class="mb-2"><i class="fas fa-id-badge text-primary"></i> <strong>Account ID:</strong> {{userData._id}}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
