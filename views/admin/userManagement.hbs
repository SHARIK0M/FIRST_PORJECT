  <main class="main-wrap">
        <section class="content-main" >
            <div class="content-header">
                <h2 class="content-title">Users list</h2>
            </div>
            <div class="card mb-4" style="background-color: #f2a6a6;">                
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Registered</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            {{#each users}}
                            <tbody>
                                <tr>
                                    <!-- User profile section -->
                                    <td width="30%">
                                        <a href="#" class="itemside">
                                            <div class="left mt-5">
                                                <img src="/assets/imgs/products/{{imageUrl}}" class="img-sm img-avatar" alt="Userpic" onerror="src='/assetsAdmin/imgs/people/UserImage.png'">
                                            </div>
                                            <div class="info pl-3">
                                                <h6 class="mb-0 title">{{name}}</h6>
                                                <small class="text-muted">{{mobile}}</small>
                                            </div>
                                        </a>
                                    </td>
                                    
                                    <!-- User email -->
                                    <td width="20%">{{email}}</td>
                                    
                                    <!-- User status (Blocked or Active) -->
                                    {{#if isBlocked}}
                                    <td width="20%"><span class="badge rounded-pill alert-danger">Blocked</span></td>
                                    {{else}}
                                    <td width="20%"><span class="badge rounded-pill alert-success">Active</span></td>
                                    {{/if}}
                                    
                                    <!-- Registration date -->
                                    <td width="20%">24.12.2024</td>
                                    
                                    <!-- Block/Unblock button -->
                                    <td width="20%">
                                        {{#if this.isBlocked}}
                                        <a id="blockuser" data-user-id="{{this._id}}" class="btn btn-sm font-sm btn-primary" href="/admin/blockuser">
                                            Unblock
                                        </a>
                                        {{else}}
                                        <a id="blockuser" data-user-id="{{this._id}}" class="btn btn-sm font-sm btn-primary" href="/admin/blockuser">
                                            Block
                                        </a>
                                        {{/if}}
                                    </td>
                                </tr>
                            </tbody>
                            {{/each}}
                        </table> 
                    </div>
                </div>
            </div> 
            
            <!-- Pagination section -->
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        {{#each pages}}
                        <li class="page-item active"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
                        {{/each}}
                    </ul>
                </nav>
            </div>
        </section> 
    </main>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>

    // Block User Functionality
    $(document).ready(function () {
        $(document).on('click', '#blockuser', function (e) {
            e.preventDefault();
            var id = $(this).data('user-id');
            var $this = $(this); // Store reference for later use

            Swal.fire({
                title: "Are you sure?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#088178",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'PUT',
                        url: '/admin/blockuser',
                        contentType: 'application/json',
                        data: JSON.stringify({ id: id }),
                        success: function () {
                            console.log("User Blocked");
                        },
                        error: function (xhr, status, error) {
                            console.error("Error blocking user:", error);
                            swal("Error", "Something went wrong. Please try again later.", "error");
                        }
                    });

                    Swal.fire({
                        title: "Done!",
                        icon: "success"
                    }).then((confirm) => {
                        if (confirm.isConfirmed) {
                            window.location.reload();
                        }
                    });
                }
            });
        });
    });
</script>
