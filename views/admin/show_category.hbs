
<main class="main-wrap">

  <section class="content-main" >
    <div class="content-header">
      <div>
        <h2 class="content-title card-title">Category List</h2>
      </div>
      <div>
        <a class="btn btn-primary btn-sm rounded" href="/admin/addCategory">Create New Category</a>
      </div>
    </div>
    <div class="card mb-4" style="background-color: #f2a6a6;">
      
      <div class="card-body">
        
        {{#each category}}
        <article class="itemlist">
          <div class="row align-items-center">
            
            <!-- Category Image -->
            <div class="col-lg-3 col-sm-3 col-3 flex-grow-1 col-name jsutify-content-center text-align-center">
              <a class="itemside" href="#">
                <div class="d-flex align-items-center justify-content-center">
                  <img src="/assets/imgs/products/{{imageUrl}}" class="img-sm img-thumbnail" alt="Item">
                </div>
              </a>
            </div>
            
            <!-- Category Name -->
            <div class="col-lg-3 col-sm-3 col-3 flex-grow-1 col-name text-align-center">
              <a class="itemside" href="#">
                <div class="info">
                  <h6 class="mb-0">{{this.category}}</h6>
                </div>
              </a>
            </div>
            
            <!-- Category Status -->
            <div class="col-lg-3 col-sm-3 col-3 col-status">
              {{#if isListed}}
              <span class="badge rounded-pill alert-success">Listed</span>
              {{else}}
              <span class="badge rounded-pill alert-danger">Unlisted</span>
              {{/if}}
            </div>
            
            <!-- Edit Button -->
            <div class="col-lg-1 col-sm-1 col-1 col-date text-end">
              <a href="/admin/editCategory/{{this._id}}" class="btn btn-pill font-sm rounded btn-brand">
                <i class="material-icons md-edit"></i> Edit
              </a>
            </div>
            
            <!-- List/Unlist Button -->
            <div class="col-lg-1 col-sm-1 col-1 col-date text-end">
              <a href="/admin/unlistCategory" id="listunlistrod" data-product-id="{{this._id}}" class="btn btn font-sm btn-light rounded">
                <i class="material-icons md-delete_forever"></i> {{#if isListed}}Unlist{{else}}List{{/if}}
              </a>
            </div>
            
          </div> 
        </article>
        {{/each}}
        
      </div>
    </div>
    
    <!-- Pagination Section -->
    <div class="pagination-area mt-15 mb-50">
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-start">
          {{#each pages}}
          <li class="page-item active"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
          {{/each}}
        </ul>
      </nav>
    </div>
  </section>
  
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


<script>   
$(document).ready(function () {
    // Handle click event on the unlist button
    $(document).on('click', '#listunlistrod', function (e) {
        e.preventDefault();
        var id = $(this).data('product-id'); // Get product ID from data attribute
        var $this = $(this); // Store reference to the clicked element
        
        // Show confirmation popup
        Swal.fire({
            title: "Are you sure?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#088178",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes!"
        }).then((result) => {
            if (result.isConfirmed) {
                // Send AJAX request to unlist the product
                $.ajax({
                    type: 'POST',
                    url: '/admin/unlistCategory',
                    contentType: 'application/json',
                    data: JSON.stringify({ id: id }),
                    success: function (productData) {
                        console.log("Product unlisted successfully");

                        // Show success message and reload page
                        Swal.fire({
                            title: 'Done!',
                            icon: 'success',
                        }).then(() => {                            
                            window.location.reload();
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Error unlisting product:", error);
                        Swal.fire("Error", "Something went wrong. Please try again later.", "error");
                    }
                });
            }
        });
    });
});
</script>
