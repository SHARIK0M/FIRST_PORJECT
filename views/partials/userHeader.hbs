<body>
    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
      <div class="offcanvas__option">
        <div class="offcanvas__links">
          {{#if userData}}
             <div class="header-action-icon-2">
                    <div class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount"
                            aria-expanded="false">
                           <img class="img-xs rounded-circle mr-2" style="width: 40px; object-fit: cover;"
    src="{{#if userData.image}}/assets/imgs/profiles/{{userData.image}}{{else}}/images/users/default.png{{/if}}" 
    alt="UserPhoto">

                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount"
                            style="background-color: black;">
                            <ul class="dropdown-item-list">
                                <li><a class="dropdown-item" href="/profile">Account</a></li>
                                <li><a class="dropdown-item" href="/orders">Orders</a></li>
                                <li><a class="dropdown-item" href="/addresses">Address</a></li>
                                <div class="dropdown-divider"></div>
                                <li><a class="dropdown-item text-danger logoutbtn" href="#">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
          {{else}}
            <a href="/signup">Sign up</a>
            <a href="/login">Login</a>
          {{/if}}
        </div>
      </div>
      <div class="offcanvas__nav__option">
        <a href="#" class="search-switch"><img src="img/icon/search.png" alt="" /></a>
        <a href="/wishlist"><img src="img/icon/heart.png" alt="" /></a>
        <a href="/cart"><img src="img/icon/cart.png" alt="" /> <span>0</span></a>
      </div>
      <div id="mobile-menu-wrap"></div>
      <div class="offcanvas__text">
        <p>Free shipping, 30-day return or refund guarantee.</p>
      </div>
    </div>
    <!-- Offcanvas Menu End -->

    <!-- Header Section Begin -->
    <header class="header">
      <div class="header__top">
        <div class="container">
          <div class="row">
            <div class="col-lg-6 col-md-7">
              <div class="header__top__left">
                <p>Free shipping, 30-day return or refund guarantee.</p>
              </div>
            </div>
            <div class="col-lg-6 col-md-5">
              <div class="header__top__right">
                <div class="header__top__links">
                  {{#if userData}}
                     <div class="header-action-icon-2">
                    <div class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount"
                            aria-expanded="false">
                           <img class="img-xs rounded-circle mr-2" style="width: 40px; object-fit: cover;"
    src="{{#if userData.image}}/assets/imgs/profiles/{{userData.image}}{{else}}/images/users/default.png{{/if}}" 
    alt="UserPhoto">
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount"
                            style="background-color: black;">
                            <ul class="dropdown-item-list">
                                <li><a class="dropdown-item" href="/profile">Account</a></li>
                                <div class="dropdown-divider"></div>
                                <li><a class="dropdown-item text-danger logoutbtn" href="/logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                  {{else}}
                    <a href="/signup">Sign up</a>
                    <a href="/login">Login</a>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-lg-3 col-md-3">
            <div class="header__logo">
              <a href="/"><img src="img/logo.png" alt="" /></a>
            </div>
          </div>
          <div class="col-lg-6 col-md-6">
            <nav class="header__menu mobile-menu">
              <ul>
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/shop">Shop</a></li>
                <li><a href="#">About</a></li>
                <li><a href="/contact">Contacts</a></li>
              </ul>
            </nav>
          </div>
          <div class="col-lg-3 col-md-3">
            <div class="header__nav__option">
              <a href="#" id="searchIcon">
                    <img src="img/icon/search.png" alt="" />
              </a>

              <a href="/wishlist"><img src="img/icon/heart.png" alt="" /></a>
              <a href="/cart"><img src="img/icon/cart.png" alt="" /> <span></span></a>
          <div id="searchContainer" class="search-style-2 me-3 mt-1 mb-0" style="display: none;">
             <input type="text" onkeyup="searchProducts()" id="searchInput" name="search"
                class="form-control" placeholder="Search for items..." 
             style="border: 2px solid #B0C4DE; border-radius: 5px; padding: 5px; outline: none; background-color: white;">
          </div>
            </div>
          </div>

        </div>
        <div class="canvas__open"><i class="fa fa-bars"></i></div>
      </div>
    </header>
    <!-- Header Section End -->
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
    <script>
    document.getElementById("searchIcon").addEventListener("click", function (event) {
        event.preventDefault();
        var searchBox = document.getElementById("searchContainer");
        if (searchBox.style.display === "none" || searchBox.style.display === "") {
            searchBox.style.display = "block";
        } else {
            searchBox.style.display = "none";
        }
    });
</script>

    <script>
        // Redirect to home page after login
        $(document).ready(function () {
            if (window.location.pathname === '/login' && {{userData}}) {
                window.location.href = "/";
            }
        });
        
        // Logout Button
        $(document).ready(function () {
            $('#logoutbtn').click(function (e) {
                e.preventDefault();
                Swal.fire({
                    title: "LOGOUT?",
                    text: "Do you want to logout?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#088178",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "/logout";
                    }
                });
            });
        });
    </script>

</body>